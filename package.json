{
  "name": "neuron-tasks",
  "version": "1.0.0",
  "description": "AI-Powered Neural Productivity Platform with Cyberpunk Aesthetics",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --production",
    "start": "cd backend && npm start",
    "start:prod": "cd backend && NODE_ENV=production npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist",
    "test": "cd backend && npm test",
    "lint": "cd frontend && npm run lint",
    "seed:dev": "cd backend && npm run seed",
    "seed:prod": "cd backend && node utils/seed.production.js",
    "deploy:frontend": "cd frontend && npm run build",
    "deploy:backend": "cd backend && NODE_ENV=production npm start",
    "heroku-postbuild": "npm run install:all && npm run build"
  },
  "keywords": [
    "productivity",
    "task-management",
    "ai",
    "neural-network",
    "cyberpunk",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "NEURON Tasks Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/neuron-tasks.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/neuron-tasks/issues"
  },
  "homepage": "https://github.com/yourusername/neuron-tasks#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}