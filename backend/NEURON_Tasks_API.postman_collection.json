              "raw": "{\n  \"theme\": {\n    \"isDark\": true\n  },\n  \"aiEnabled\": true,\n  \"notifications\": {\n    \"email\": true,\n    \"push\": false,\n    \"taskReminders\": true\n  },\n  \"preferences\": {\n    \"defaultPriority\": \"medium\",\n    \"defaultView\": \"calendar\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/settings",
